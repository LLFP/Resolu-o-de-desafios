# Registrando variáveis
v = input('Qual palavra você deseja colocar ao contrário? ')
b = []
c = len(v)
f = c - 1
i = 0
h = ""

# Loop colocando a string em uma lista
for k in v:
    b.append(k)

# Condição para a palavra ser colocada ao contrário
while i < c:
    h += b[f]
    f -= 1
    i += 1

# imprimindo a palavra e sua versão contrária
print(f'A palavra {v} ao contrário é {h}')

